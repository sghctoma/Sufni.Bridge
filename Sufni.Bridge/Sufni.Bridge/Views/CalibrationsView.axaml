<UserControl
    x:Class="Sufni.Bridge.Views.CalibrationsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="clr-namespace:Avalonia.Labs.Controls;assembly=Avalonia.Labs.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:Sufni.Bridge.Views"
    xmlns:vm="clr-namespace:Sufni.Bridge.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="500"
    x:DataType="vm:MainPagesViewModel"
    Background="#404040"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainPagesViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="*" RowDefinitions="44 * auto auto">

        <!--  Search box  -->
        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="6,5,6,0"
            VerticalContentAlignment="Center"
            Text="{Binding CalibrationSearchText}"
            Watermark="Search ..." />
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="30"
            Margin="6,5,15,0"
            HorizontalAlignment="Right"
            Classes="embedded"
            Command="{Binding ClearSearchTextCommand}"
            CommandParameter="calibration"
            IsVisible="{Binding CalibrationSearchText, Converter={x:Static ObjectConverters.IsNotNull}}">
            <Image Source="{SvgImage /Assets/fa-xmark.svg}" />
        </Button>

        <!--  List of Calibrations  -->
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,5,0,5">
            <ItemsRepeater Classes="main" ItemsSource="{Binding Calibrations}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Panel Margin="6,2,6,2">
                            <Border
                                Height="48"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Stretch"
                                Background="#bf312d"
                                BorderBrush="#505050"
                                BorderThickness="1"
                                CornerRadius="5" />
                            <labs:Swipe PropertyChanged="SwipePropertyChanged">
                                <labs:Swipe.Content>
                                    <Button
                                        Height="48"
                                        Padding="30,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#505050"
                                        BorderThickness="1"
                                        Command="{Binding OpenPageCommand}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding Name}"
                                        CornerRadius="5" />
                                </labs:Swipe.Content>
                                <labs:Swipe.Left>
                                    <DataTemplate>
                                        <Button
                                            Width="64"
                                            Height="48"
                                            VerticalContentAlignment="Center"
                                            Background="#a02010"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <Image
                                                Width="20"
                                                Height="20"
                                                Source="{SvgImage /Assets/fa-trash-can.svg}" />
                                        </Button>
                                    </DataTemplate>
                                </labs:Swipe.Left>
                            </labs:Swipe>
                        </Panel>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>

        <!--  Notifications  -->
        <v:NotificationsView
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0" />

        <!--  Error messages  -->
        <v:ErrorMessagesView
            Grid.Row="3"
            Grid.Column="0"
            Margin="5,0" />
    </Grid>
</UserControl>