<UserControl
    x:Class="Sufni.Bridge.Views.Controls.PullableMenuScrollViewer"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:Sufni.Bridge.Views.Controls"
    xmlns:vm="clr-namespace:Sufni.Bridge.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <v:NegativeMarginConverter x:Key="NegativeMarginConverter" />
        <v:MenuItemSelectedConverter x:Key="MenuItemSelectedConverter" />
    </UserControl.Resources>

    <Grid Margin="{Binding #PullMenu.Bounds.Height, Converter={StaticResource NegativeMarginConverter}}" RowDefinitions="auto *">
        <ItemsRepeater
            Name="PullMenu"
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding $parent[v:PullableMenuScrollViewer].MenuItems}">
            <ItemsRepeater.Layout>
                <NonVirtualizingStackLayout Orientation="Vertical" />
            </ItemsRepeater.Layout>
            <ItemsRepeater.ItemTemplate>
                <DataTemplate DataType="vm:PullMenuItemViewModel">
                    <Panel>
                        <Border
                            Height="15"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="#0078D7"
                            BoxShadow="0 0 10 #0078D7"
                            CornerRadius="3"
                            IsVisible="{Binding Selected}"
                            Opacity="0.4" />
                        <Button
                            Height="30"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Classes="embedded"
                            Command="{Binding Command}"
                            CommandParameter="{Binding CommandParameter}"
                            Content="{Binding Name}"
                            FontWeight="{Binding Selected, Converter={StaticResource MenuItemSelectedConverter}}" />
                    </Panel>
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
        <ScrollViewer
            Name="Scroll"
            Grid.Row="1"
            VerticalAlignment="Bottom">
            <ItemsRepeater Classes="main" ItemsSource="{Binding $parent[v:PullableMenuScrollViewer].Items}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <v:SwipeToDeleteButtonView />
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>
    </Grid>
</UserControl>
