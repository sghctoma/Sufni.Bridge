<UserControl
    x:Class="Sufni.Bridge.Views.Controls.PullableScrollViewer"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:Sufni.Bridge.Views.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Panel>
        <Image
            Name="Progress"
            Width="28"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
			Opacity="0.0"
            Source="{SvgImage /Assets/fa-rotate-right.svg}" />
        <ScrollViewer Name="Scroll" Content="{Binding $parent[v:PullableScrollViewer].ItemsContainer}" />
    </Panel>
</UserControl>
