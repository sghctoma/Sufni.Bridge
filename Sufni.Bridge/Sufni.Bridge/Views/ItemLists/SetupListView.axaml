<UserControl
    x:Class="Sufni.Bridge.Views.ItemLists.SetupListView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:Sufni.Bridge.Views.Controls"
    xmlns:vm="clr-namespace:Sufni.Bridge.ViewModels.ItemLists"
    d:DesignHeight="400"
    d:DesignWidth="500"
    x:DataType="vm:SetupListViewModel"
    Background="#15191c"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:SetupListViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="*" RowDefinitions="44 * auto auto">

        <!--  Search box  -->
        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="6,5,6,0"
            VerticalContentAlignment="Center"
            Text="{Binding SearchText}"
            Watermark="Search ..." />
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="30"
            Margin="6,5,15,0"
            HorizontalAlignment="Right"
            Classes="embedded"
            Command="{Binding ClearSearchTextCommand}"
            CommandParameter="setup"
            IsVisible="{Binding SearchText, Converter={x:Static ObjectConverters.IsNotNull}}">
            <Image Source="{SvgImage /Assets/fa-xmark.svg}" />
        </Button>

        <!--  List of Setups  -->
        <v:PullableMenuScrollViewer
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,15,0,5"
            Items="{Binding Items}"
            MenuItems="{Binding MenuItems}" />

        <!--  Notifications  -->
        <v:NotificationsBar
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0"
            IsVisible="{Binding Notifications.Count}" />

        <!--  Error messages  -->
        <v:ErrorMessagesBar
            Grid.Row="3"
            Grid.Column="0"
            Margin="5,0"
            IsVisible="{Binding ErrorMessages.Count}" />

        <!--  Undo last deleted  -->
        <v:UndoDeleteButton
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0" />
    </Grid>
</UserControl>