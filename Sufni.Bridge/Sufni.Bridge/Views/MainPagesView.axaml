<UserControl
    x:Class="Sufni.Bridge.Views.MainPagesView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Sufni.Bridge.Views.Controls"
    xmlns:controls="clr-namespace:Sufni.Bridge.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
    xmlns:v="clr-namespace:Sufni.Bridge.Views.ItemLists"
    xmlns:vm="clr-namespace:Sufni.Bridge.ViewModels"
    d:DesignHeight="720"
    d:DesignWidth="500"
    x:DataType="vm:MainPagesViewModel"
    Background="{StaticResource SufniRegion}"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainPagesViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <!--  Tabs  -->
        <Style Selector="TabControl">
            <Setter Property="Padding" Value="0" />
        </Style>
        <Style Selector="TabItem">
            <Setter Property="Margin" Value="2 0 2 0" />
            <Setter Property="MinHeight" Value="46" />
            <Setter Property="Height" Value="46" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style Selector="TabItem /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
        <Style Selector="TabItem:disabled /template/ Border">
            <Setter Property="Opacity" Value="0.3" />
        </Style>
        <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="Height" Value="2" />
            <Setter Property="Width" Value="60" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="{StaticResource SufniAccentColor}" />
        </Style>
    </UserControl.Styles>

    <SplitView
        Name="MainSplitView"
        DisplayMode="Overlay"
        IsPaneOpen="{Binding IsMenuPaneOpen, Mode=TwoWay}"
        OpenPaneLength="160"
        UseLightDismissOverlayMode="True">
        <SplitView.Pane>
            <controls:SidePanel
                Name="MenuPanel"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0" />
        </SplitView.Pane>
        <SplitView.Content>
            <Panel>
                <Grid ColumnDefinitions="auto * 40" RowDefinitions="30 *">

                    <!--  Title  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontWeight="Black"
                        IsHitTestVisible="False"
                        Text="Sufni Suspension Telemetry" />

                    <!--  Connection indicator  -->
                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,0,5,0"
                        Classes="embedded">
                        <Button.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="SettingsPage.IsRegistered" />
                                <Binding Path="!SyncInProgress" />
                            </MultiBinding>
                        </Button.IsVisible>
                        <Image
                            Width="20"
                            Opacity="0.5"
                            Source="{SvgImage /Assets/fa-link_green.svg}" />
                    </Button>

                    <!--  Synchronization indicator  -->
                    <progRing:ProgressRing
                        Grid.Row="0"
                        Grid.Column="2"
                        Width="20"
                        Height="20"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource SufniAccentColor}">
                        <progRing:ProgressRing.IsActive>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="SyncInProgress" />
                            </MultiBinding>
                        </progRing:ProgressRing.IsActive>
                    </progRing:ProgressRing>

                    <!--  Menu tab  -->
                    <TabControl
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Background="{StaticResource SufniBackgroundDisabled}"
                        SelectedIndex="{Binding SelectedIndex}"
                        TabStripPlacement="Bottom">
                        <TabControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid
                                    Margin="3,0,3,5"
                                    HorizontalAlignment="Stretch"
                                    Rows="1" />
                            </ItemsPanelTemplate>
                        </TabControl.ItemsPanel>
                        <TabItem Name="SessionTabItem" Content="{Binding SessionsPage}">
                            <TabItem.Header>
                                <StackPanel>
                                    <Image Width="16" Source="{SvgImage /Assets/fa-chart-line.svg}" />
                                    <TextBlock
                                        Margin="0,2,0,0"
                                        HorizontalAlignment="Center"
                                        FontSize="9"
                                        Text="Sessions" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem Name="LinkagesTabItem" Content="{Binding LinkagesPage}">
                            <TabItem.Header>
                                <StackPanel>
                                    <Image Width="16" Source="{SvgImage /Assets/leverage-ratio.svg}" />
                                    <TextBlock
                                        Margin="0,2,0,0"
                                        HorizontalAlignment="Center"
                                        FontSize="9"
                                        Text="Linkages" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem
                            Name="CalibrationsTabItem"
                            Content="{Binding CalibrationsPage}"
                            IsEnabled="{Binding CalibrationsPage.HasCalibrationMethods}">
                            <TabItem.Header>
                                <StackPanel>
                                    <Image Width="18" Source="{SvgImage /Assets/fa-ruler.svg}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="9"
                                        Text="Calibrations" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem Name="BikeSetupsTabItem" Content="{Binding SetupsPage}">
                            <TabItem.IsEnabled>
                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                    <Binding Path="CalibrationsPage.HasCalibrations" />
                                    <Binding Path="LinkagesPage.HasLinkages" />
                                </MultiBinding>
                            </TabItem.IsEnabled>
                            <TabItem.Header>
                                <StackPanel>
                                    <Image Width="18" Source="{SvgImage /Assets/fa-person-mountainbiking.svg}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="9"
                                        Text="Setups" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Panel>
        </SplitView.Content>
    </SplitView>
</UserControl>
