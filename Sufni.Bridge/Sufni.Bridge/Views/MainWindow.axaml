<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Sufni.Bridge.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Sufni.Bridge.Views.MainWindow"
        Icon="/Assets/sufni-icon.png"
        Title="Sufni.Bridge"
        Width="500" Height="700"
        MaxWidth="500"
        Background="#15191c"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="35">

    <Panel>
        <!-- Title -->
        <TextBlock Margin="5,5,5,5" Padding="5" Height="35"
                   IsHitTestVisible="False"
                   VerticalAlignment="Top"
                   FontWeight="Black"
                   Text="Sufni Suspension Telemetry" />
        
        <!-- Main view -->
        <views:MainView Margin="0,35,0,5" />
    </Panel>

</Window>