<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Sufni.Bridge.ViewModels"
             xmlns:v="clr-namespace:Sufni.Bridge.Views"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
             x:Class="Sufni.Bridge.Views.SessionsView"
             x:DataType="vm:MainViewModel">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <v:HeaderColorConverter x:Key="HeaderColorConverter" />
        <v:CustomGridLengthConverter x:Key="CustomGridLengthConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button:disabled Image">
            <Setter Property="Opacity" Value="0.3" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="* auto 40" ColumnDefinitions="*">

        <!-- List of Calibrations -->
        <ListBox Grid.Row="0" Grid.Column="0"
                 Background="Transparent"
                 ItemsSource="{Binding Sessions}">
            <ListBox.Styles>
                <Style Selector="ListBoxItem">
                    <Setter Property="Padding" Value="6,6, 6, 3" />
                </Style>
                <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
                <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </ListBox.Styles>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Expander CornerRadius="5" Padding="5" HorizontalAlignment="Stretch">

                        <!-- Indicate modifications with header color -->
                        <Expander.Resources>
                            <!-- ReSharper disable once Xaml.RedundantResource -->
                            <SolidColorBrush x:Key="ExpanderHeaderBackgroundPointerOver"
                                             Color="{Binding IsDirty, Converter={StaticResource HeaderColorConverter}}" />
                            <!-- ReSharper disable once Xaml.RedundantResource -->
                            <SolidColorBrush x:Key="ExpanderHeaderBackground"
                                             Color="{Binding IsDirty, Converter={StaticResource HeaderColorConverter}}" />
                        </Expander.Resources>

                        <!-- Editable name and non-editable timestamp in header -->
                        <Expander.Header>
                            <Grid ColumnDefinitions="* 150" RowDefinitions="*">
                                <TextBox Grid.Column="0" BorderBrush="Transparent"
                                         HorizontalAlignment="Stretch"
                                         Text="{Binding Name}" />
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Timestamp}" />
                            </Grid>
                        </Expander.Header>
                        
                        <!-- Attach command to Expanding event -->
                        <i:Interaction.Behaviors>
                            <ia:EventTriggerBehavior EventName="Expanding">
                                <InvokeCommandAction Command="{Binding LoadPsstCommand}" />
                            </ia:EventTriggerBehavior>
                        </i:Interaction.Behaviors>

                        <Grid ColumnDefinitions="auto *" RowDefinitions="auto auto auto auto auto auto auto 40"
                              MinWidth="300" HorizontalAlignment="Stretch">
                            
                            <!-- Front suspension statistics -->
                            <v:SuspensionStatistics Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                    IsVisible="{Binding FrontVelocityStatistics, Converter={x:Static ObjectConverters.IsNotNull}}"
                                                    SuspensionType="Front"
                                                    TravelAverageString="{Binding FrontTravelAverageString}"
                                                    TravelMaxString="{Binding FrontTravelMaxString}"
                                                    AverageReboundVelocity="{Binding  FrontVelocityStatistics.AverageRebound, StringFormat={}{0:0.00} mm/s}"
                                                    MaximumReboundVelocity="{Binding FrontVelocityStatistics.MaxRebound, StringFormat={}{0:0.00} mm/s}"
                                                    AverageCompressionVelocity="{Binding FrontVelocityStatistics.AverageCompression, StringFormat={}{0:0.00} mm/s}"
                                                    MaximumCompressionVelocity="{Binding FrontVelocityStatistics.MaxCompression, StringFormat={}{0:0.00} mm/s}"
                                                    LowSpeedRebound="{Binding FrontVelocityBands.LowSpeedRebound, StringFormat={}{0:0.00}%}"
                                                    HighSpeedRebound="{Binding FrontVelocityBands.HighSpeedRebound, StringFormat={}{0:0.00}%}"
                                                    LowSpeedCompression="{Binding FrontVelocityBands.LowSpeedCompression, StringFormat={}{0:0.00}%}"
                                                    HighSpeedCompression="{Binding FrontVelocityBands.HighSpeedCompression, StringFormat={}{0:0.00}%}" />
                            
                            <!-- Front suspension velocity bands -->
                            <!-- XXX This should be in SuspensionStatistics.axaml,
                                 but ColumnDefinition binding does not seem to work
                                 in a templated control -->
                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                  RowDefinitions="auto auto"
                                  Margin="0,0,0,10"
                                  IsVisible="{Binding FrontVelocityBands, Converter={x:Static ObjectConverters.IsNotNull}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{Binding FrontVelocityBands.HighSpeedRebound, Converter={StaticResource CustomGridLengthConverter}}" />
                                    <ColumnDefinition Width="{Binding FrontVelocityBands.LowSpeedRebound, Converter={StaticResource CustomGridLengthConverter}}" />
                                    <ColumnDefinition Width="{Binding FrontVelocityBands.LowSpeedCompression, Converter={StaticResource CustomGridLengthConverter}}" />
                                    <ColumnDefinition Width="{Binding FrontVelocityBands.HighSpeedCompression, Converter={StaticResource CustomGridLengthConverter}}" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,2"
                                           FontWeight="Black" 
                                           Text="Front velocity bands" />
                                
                                <Border Margin="2" Grid.Row="1" Grid.Column="0"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="HSR" HorizontalAlignment="Center" />
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding FrontVelocityBands.HighSpeedRebound, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="2" Grid.Row="1" Grid.Column="1"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="LSR" HorizontalAlignment="Center"/>
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding FrontVelocityBands.LowSpeedRebound, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="2" Grid.Row="1" Grid.Column="2"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="LSC" HorizontalAlignment="Center"/>
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding FrontVelocityBands.LowSpeedCompression, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="2" Grid.Row="1" Grid.Column="3"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="HSC" HorizontalAlignment="Center"/>
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding FrontVelocityBands.HighSpeedCompression, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Rear suspension statistics -->
                            <v:SuspensionStatistics Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                    IsVisible="{Binding RearVelocityStatistics, Converter={x:Static ObjectConverters.IsNotNull}}"
                                                    SuspensionType="Rear"
                                                    TravelAverageString="{Binding RearTravelAverageString}"
                                                    TravelMaxString="{Binding RearTravelMaxString}"
                                                    AverageReboundVelocity="{Binding  RearVelocityStatistics.AverageRebound, StringFormat={}{0:0.00} mm/s}"
                                                    MaximumReboundVelocity="{Binding RearVelocityStatistics.MaxRebound, StringFormat={}{0:0.00} mm/s}"
                                                    AverageCompressionVelocity="{Binding RearVelocityStatistics.AverageCompression, StringFormat={}{0:0.00} mm/s}"
                                                    MaximumCompressionVelocity="{Binding RearVelocityStatistics.MaxCompression, StringFormat={}{0:0.00} mm/s}"
                                                    LowSpeedRebound="{Binding RearVelocityBands.LowSpeedRebound, StringFormat={}{0:0.00}%}"
                                                    HighSpeedRebound="{Binding RearVelocityBands.HighSpeedRebound, StringFormat={}{0:0.00}%}"
                                                    LowSpeedCompression="{Binding RearVelocityBands.LowSpeedCompression, StringFormat={}{0:0.00}%}"
                                                    HighSpeedCompression="{Binding RearVelocityBands.HighSpeedCompression, StringFormat={}{0:0.00}%}" />
                            
                            <!-- Rear suspension velocity bands -->
                            <!-- XXX This should be in SuspensionStatistics.axaml,
                                 but ColumnDefinition binding does not seem to work
                                 in a templated control -->
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                  RowDefinitions="auto auto"
                                  Margin="0,0,0,10"
                                  IsVisible="{Binding RearVelocityBands, Converter={x:Static ObjectConverters.IsNotNull}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{Binding RearVelocityBands.HighSpeedRebound, Converter={StaticResource CustomGridLengthConverter}}" />
                                    <ColumnDefinition Width="{Binding RearVelocityBands.LowSpeedRebound, Converter={StaticResource CustomGridLengthConverter}}" />
                                    <ColumnDefinition Width="{Binding RearVelocityBands.LowSpeedCompression, Converter={StaticResource CustomGridLengthConverter}}" />
                                    <ColumnDefinition Width="{Binding RearVelocityBands.HighSpeedCompression, Converter={StaticResource CustomGridLengthConverter}}" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,2"
                                           FontWeight="Black" 
                                           Text="Rear velocity bands" />
                                
                                <Border Margin="2" Grid.Row="1" Grid.Column="0"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="HSR" HorizontalAlignment="Center" />
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding RearVelocityBands.HighSpeedRebound, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="2" Grid.Row="1" Grid.Column="1"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="LSR" HorizontalAlignment="Center"/>
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding RearVelocityBands.LowSpeedRebound, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="2" Grid.Row="1" Grid.Column="2"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="LSC" HorizontalAlignment="Center"/>
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding RearVelocityBands.LowSpeedCompression, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="2" Grid.Row="1" Grid.Column="3"
                                        CornerRadius="3"
                                        BorderBrush="DarkGray" BorderThickness="1" >
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="HSC" HorizontalAlignment="Center"/>
                                        <TextBlock FontSize="12" HorizontalAlignment="Center"
                                                   Text="{Binding RearVelocityBands.HighSpeedCompression, StringFormat={}{0:0.00}%}" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Description -->
                            <TextBlock Grid.Row="4" Grid.Column="0"
                                   FontWeight="Black" VerticalAlignment="Center"
                                   Text="Description" />
                            <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                     Margin="2"
                                     HorizontalAlignment="Stretch"
                                     MaxLines="10"
                                     Text="{Binding Description}" />
                            
                            <!-- Error messages for Calibration instance -->
                            <v:ErrorMessagesControl Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Margin="0,5, 0, 0"
                                                    ClearErrorsCommand="{Binding ClearErrorsCommand}"
                                                    ErrorMessages="{Binding ErrorMessages}"
                                                    IsVisible="{Binding ErrorMessages.Count}" />

                            <!-- Save, Reset and Delete buttons -->
                            <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                                  Margin="0,5,0,5"
                                  ColumnDefinitions="* auto auto" RowDefinitions="30">
                                <Button Grid.Row="0" Grid.Column="0"
                                        Command="{Binding SaveCommand}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Content="Save" />
                                <Button Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch"
                                        Command="{Binding ResetCommand}">
                                    <Image Width="16" Height="16"
                                           Source="{SvgImage /Assets/fa-rotate-left.svg}" />
                                </Button>
                                <Button Grid.Row="0" Grid.Column="2" VerticalAlignment="Stretch"
                                        Command="{Binding $parent[ListBox].((vm:MainViewModel)DataContext).DeleteSessionCommand}"
                                        CommandParameter="{Binding Id}">
                                    <Image Width="16" Height="16"
                                           Source="{SvgImage /Assets/fa-trash-can.svg}" />
                                </Button>
                            </Grid>
                        </Grid>
                    </Expander>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Error messages -->
        <v:ErrorMessagesControl Grid.Row="1" Grid.Column="0"
                                Margin="5, 0"
                                ClearErrorsCommand="{Binding ClearErrorsCommand}"
                                ErrorMessages="{Binding ErrorMessages}"
                                IsVisible="{Binding ErrorMessages.Count}" />

        <Grid Grid.Row="2" Grid.Column="0"
              ColumnDefinitions="* auto" RowDefinitions="40">
            <!-- Reload Linkages -->
            <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Margin="5,7,1,3"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Command="{Binding ReloadCommand}">
                <Image Source="{SvgImage /Assets/fa-sync-alt.svg}" />
            </Button>
        </Grid>
    </Grid>
</UserControl>