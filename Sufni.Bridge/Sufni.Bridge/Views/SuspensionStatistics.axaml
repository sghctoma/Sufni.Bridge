                                <TextBlock FontSize="12" HorizontalAlignment="Center"
                                           Text="{TemplateBinding LowSpeedRebound}" />
                            </StackPanel>
                        </Border>
                        <Border Margin="2" Grid.Row="1" Grid.Column="2"
